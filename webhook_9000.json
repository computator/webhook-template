[
	{
		"id": "bb_commit",
		"execute-command": "sh",
		"command-working-directory": "test",
		"include-command-output-in-response": true,
		"pass-arguments-to-command": [
			{"source": "string", "name": "-c"},
			{"source": "string", "name": "hg pull && hg update default"}
		],
		"trigger-rule": {
			"and": [
				{
					"match": {
						"type": "value",
						"value": "repo:push",
						"parameter": {
							"source": "header",
							"name": "X-Event-Key"
						}
					}
				},
				{
					"match": {
						"type": "value",
						"value": "named_branch",
						"parameter": {
							"source": "payload",
							"name": "push.changes.0.new.type"
						}
					}
				},
				{
					"match": {
						"type": "value",
						"value": "default",
						"parameter": {
							"source": "payload",
							"name": "push.changes.0.new.name"
						}
					}
				}
			]
		},
		"trigger-rule-mismatch-http-response-code": 404
	},
	{
		"id": "gh_commit",
		"execute-command": "sh",
		"command-working-directory": "test",
		"include-command-output-in-response": true,
		"pass-arguments-to-command": [
			{"source": "string", "name": "-c"},
			{"source": "string", "name": "hg pull && hg update default"}
		],
		"trigger-rule": {
			"and": [
				{
					"match": {
						"type": "value",
						"value": "push",
						"parameter": {
							"source": "header",
							"name": "X-GitHub-Event"
						}
					}
				},
				{
					"match": {
						"type": "payload-hash-sha1",
						"secret": "secretkey",
						"parameter": {
							"source": "header",
							"name": "X-Hub-Signature"
						}
					}
				},
				{
					"match": {
						"type": "value",
						"value": "refs/heads/master",
						"parameter": {
							"source": "payload",
							"name": "ref"
						}
					}
				}
			]
		},
		"trigger-rule-mismatch-http-response-code": 404
	}
]
